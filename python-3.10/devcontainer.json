// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.231.3/containers/python-3
{
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile"
    },
    "extensions": [
        "ms-azuretools.vscode-docker",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens",
        "ms-python.vscode-pylance",
        "ms-python.python",
        "visualstudioexptteam.vscodeintellicode",
        "lkrms.inifmt",
        "mhutchie.git-graph"
    ],
    "features": {
		"docker-from-docker": "latest",
		"git": "os-provided",
		"git-lfs": "latest"
    },
    "name": "Python 3.10 DevEnv",
    "settings": {
        "python.analysis.autoImportCompletions": true,
        "python.analysis.autoSearchPaths": true,
        "python.analysis.completeFunctionParens": true,
        "python.analysis.diagnosticMode": "openFilesOnly",
        "python.analysis.diagnosticSeverityOverrides": {
            "python.analysis.extraPaths": [],
            "reportConstantRedefinition": "warning",
            "reportDuplicateImport": "error",
            "reportGeneralTypeIssues": "information",
            "reportImportCycles": "information",
            "reportIncompatibleMethodOverride": "error",
            "reportInvalidStringEscapeSequence": "error",
            "reportInvalidStubStatement": "error",
            "reportMissingImports": "error",
            "reportMissingModuleSource": "warning",
            "reportMissingTypeStubs": "none",
            "reportOptionalCall": "none",
            "reportOptionalIterable": "none",
            "reportOptionalOperand": "none",
            "reportOptionalSubscript": "none",
            "reportPrivateUsage": "none",
            "reportPropertyTypeMismatch": "warning",
            "reportSelfClsParameterName": "warning",
            "reportUndefinedVariable": "error",
            "reportUnusedCallResult": "none",
            "reportUnusedClass": "warning",
            "reportUnusedFunction": "warning",
            "reportUnusedImport": "warning"
        },
        "python.analysis.typeCheckingMode": "off",
        "python.analysis.useLibraryCodeForTypes": true,
        "python.autoComplete.extraPaths": [],
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.autopep8Args": [
            "--max-line-length=300"
        ],
        "python.formatting.blackArgs": [
            "--line-length",
            "512"
        ],
        "python.formatting.blackPath": "/out_of_project_venv/bin/black",
        "python.formatting.provider": "black",
        "python.jediEnabled": false,
        "python.languageServer": "Pylance",
        "python.sortImports.args": [
            "--line-length",
            "240"
        ],
        "python.sortImports.path": "/out_of_project_venv/bin/isort",
        "python.testing.pytestArgs": [],
        "python.testing.pytestEnabled": true
    }
}